{
  "name": "fejl",
  "version": "0.0.0-development",
  "description": "Error-making utility for JavaScript apps.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "check": "tsc -p tsconfig.json --noEmit --pretty",
    "lint": "npm run check && tslint --project tsconfig.json --fix \"src/**/*.ts\" && prettier --write \"src/**/*.{ts,js}\"",
    "cover": "jest --coverage",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffijoe/fejl.git"
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "directories": {
    "lib": "lib"
  },
  "keywords": [],
  "author": "Jeff Hansen <jeff@jeffijoe.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffijoe/fejl/issues"
  },
  "homepage": "https://github.com/jeffijoe/fejl#readme",
  "dependencies": {
    "make-error": "^1.3.5",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@semantic-release/condition-codeship": "^1.1.0",
    "@semantic-release/release-notes-generator": "^7.3.5",
    "@types/jest": "^24.0.24",
    "@types/node": "^13.1.0",
    "@types/rimraf": "^2.0.3",
    "coveralls": "^3.0.9",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.14.0",
    "semantic-release-conventional-commits": "^2.0.1",
    "smid": "^0.1.1",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePaths": [
      "src"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "transform": {
      "\\.(ts|tsx)": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {}
  },
  "release": {
    "generateNotes": "@semantic-release/release-notes-generator",
    "analyzeCommits": {
      "path": "semantic-release-conventional-commits",
      "majorTypes": [
        "major",
        "breaking"
      ],
      "minorTypes": [
        "feat",
        "minor"
      ],
      "patchTypes": [
        "chore",
        "fix",
        "patch",
        "docs",
        "test",
        "style",
        "refactor"
      ],
      "mergePattern": "/^Merge pull request #(\\d+) from (.*)$/",
      "mergeCorrespondence": "['id', 'source']"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  }
}
