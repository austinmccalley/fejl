{
  "name": "fejl",
  "version": "0.0.0-semantic",
  "description": "Error-making utility for JavaScript apps.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "tslint 'src/**/*.ts'",
    "lint:watch": "nodemon --exec npm run lint",
    "cover": "jest --coverage",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "typedoc": "typedoc --name 'Fejl' --out docs --theme markdown --mdFlavour github --mdHideSources --exclude '**/*.test.*'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffijoe/fejl.git"
  },
  "files": [
    "lib",
    "LICENSE.md",
    "README.md"
  ],
  "directories": {
    "lib": "lib"
  },
  "keywords": [],
  "author": "Jeff Hansen <jeff@jeffijoe.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffijoe/fejl/issues"
  },
  "homepage": "https://github.com/jeffijoe/fejl#readme",
  "dependencies": {
    "make-error": "^1.3.0",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@semantic-release/condition-codeship": "^1.1.0",
    "@semantic-release/release-notes-generator": "^3.0.1",
    "@types/jest": "^21.1.1",
    "@types/node": "^8.0.26",
    "@types/rimraf": "^2.0.2",
    "jest": "^20.0.4",
    "rimraf": "^2.6.1",
    "semantic-release": "^7.0.2",
    "semantic-release-conventional-commits": "^1.1.0",
    "smid": "^0.1.1",
    "ts-jest": "^20.0.14",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typedoc": "^0.8.0",
    "typedoc-plugin-markdown": "^1.0.8",
    "typescript": "^2.5.2"
  },
  "jest": {
    "testEnvironment": "node",
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePaths": [
      "src"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "transform": {
      "\\.(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {}
  },
  "release": {
    "generateNotes": "@semantic-release/release-notes-generator",
    "analyzeCommits": {
      "path": "semantic-release-conventional-commits",
      "majorTypes": [
        "major",
        "breaking"
      ],
      "minorTypes": [
        "feat",
        "minor"
      ],
      "patchTypes": [
        "chore",
        "fix",
        "patch",
        "docs",
        "test",
        "style",
        "refactor"
      ],
      "mergePattern": "/^Merge pull request #(\\d+) from (.*)$/",
      "mergeCorrespondence": "['id', 'source']"
    }
  }
}
